<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Largo_EvaluacionP3"
             x:Class="Largo_EvaluacionP3.Views_SL.MainPage"
             Title="Naruto Characters">

    <ContentPage.BindingContext>
        <local:CharacterViewModel_SL />
    </ContentPage.BindingContext>

    <StackLayout>
        <ListView ItemsSource="{Binding Characters}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" Detail="{Binding Clan}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Load Characters" Command="{Binding LoadCharactersCommand}" />
    </StackLayout>
    
</ContentPage>
